{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "lib": ["dom", "es2015"],
    "sourceMap": false,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "typeRoots": ["node_modules/@types", "src/typings"],
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,

    "experimentalDecorators": true
  },

  "exclude": ["build", "dist", "src/scripts", "src/**/*.test.ts", "src/test", "src/@linked"]
}
