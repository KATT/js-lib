{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "sourceMap": false,
    "declaration": false,
    "outDir": "./dist",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,

    "experimentalDecorators": true
  },

  "exclude": ["dist", "src/scripts", "src/**/*.test.ts", "src/test", "src/@linked"]
}
