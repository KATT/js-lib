{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es2018"],
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "importHelpers": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["src"]
}
